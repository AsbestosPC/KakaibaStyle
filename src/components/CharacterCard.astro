---
const {thumbnail} = Astro.props;
const {alt} = Astro.props;
const {character} = Astro.props;
const {url} = Astro.props;
---
<a href={url} class="hidden">
    <div class="card-wrapper">
        <div class="img-wrapper">
          <img src={thumbnail} alt={alt}>
        </div>
        <span>
          <p>{character}</p>
        </span>
    </div>
</a>

<style>

.hidden {
  opacity: 0;
  transition: all 0.4s;
}

.show {
  opacity: 1;
}

a {
  text-decoration: none;
  /* margin: 10px; */
}

.card-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  max-width: 234px;
}

.img-wrapper {
  overflow: hidden;
  border: solid 0px 0px 1px 0px grey;
}

img {
  display: block;
  width: 100%;
  /* max-width: 100%; */
  height: auto;
  border-style: none;
  transition: transform 0.2s; /* Animation */
  overflow: hidden;
  z-index: 1;
  object-fit: cover;
}

.card-wrapper:hover img {
  transform: scale3d(1.05, 1.05, 1);
}

span { 
  background-color: green;
  overflow: hidden;
  display: block;
  /* padding: 0px 0px 2% 0px; */
}

p {
  font-weight: bold;
  font-size: 12px;
  text-transform: uppercase;
  margin-top: 0;
  margin-bottom: 0;
  overflow: hidden;
  padding-left: 0.35vw;
  transition-duration: 0.2s;
  white-space: nowrap;
}

.card-wrapper:hover p {
  padding-left: 15px;
  transition-duration: 0.2s;
}

@media (max-width: 700px), 
(min-resolution: 124.8dpi) {
  p {
    font-size: 3.5vw;
    padding-left: 1.2vw;
  }
  span {
    padding: 4% 0px 4% 0px;
  }
}

@media (min-width: 700px) {
  p {
    font-size: 2.5vw;
    padding-left: 0.9vw;
  }
  span {
    padding: 4% 0px 4% 0px;
  }
}

@media (min-width: 950px) {
  p {
    font-size: 1.75vw;
    padding-left: 0.5vw;
  }
  span {
    padding: 3% 0px 3% 0px;
  }
}

@media (min-width: 1300px) {
  p {
    font-size: 1.25vw;
    padding-left: 0.35vw;
  }
}

</style>